<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.TelaMenuArbitroController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <VBox>
         <children>
            <TableView fx:id="TableViewArbitro" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-border-color: #498263#498263; -fx-border-width: 20;" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="NomeCol" prefWidth="75.0" text="Nome" />
                <TableColumn fx:id="CodigoCol" prefWidth="75.0" text="Codigo" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #498263;" VBox.vgrow="ALWAYS">
               <children>
                  <Group HBox.hgrow="SOMETIMES">
                     <children>
                        <Label onMouseClicked="#lblInserir" style="-fx-border-color: #498263; -fx-border-radius: 15; -fx-background-color: white; -fx-border-insets: -2.5; -fx-background-radius: 15;" text="Inserir" textFill="#498263">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label layoutX="58.0" onMouseClicked="#lblRemover" style="-fx-background-color: white; -fx-border-color: #498263; -fx-border-radius: 15; -fx-border-insets: -3; -fx-background-radius: 15;" text="Remover" textFill="#498263">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </Label>
                        <Label layoutX="131.0" onMouseClicked="#lblEditar" style="-fx-background-color: white; -fx-border-color: #498263; -fx-border-radius: 10; -fx-border-style: solid inside; -fx-border-insets: -3; -fx-background-radius: 15;" text="Editar" textFill="#498263">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </Group>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</GridPane>
